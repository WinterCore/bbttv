{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": ["src/**/*"]
}
